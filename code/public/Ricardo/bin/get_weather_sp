  $parms{city};

my $f_weather_html =
  "$config_parms{data_dir}/../web/ia5/outside/weather_local.html";
my $f_weather_data = "$config_parms{data_dir}/weather_data";

my $debug = 1 if ( $parms{debug} );

###############
# get weather #
###############

#my $weather_time = (stat($f_weather_html))[9];
