my ( $dbm_file, $dbm_file2 );
my ( %DBM,      %DBM2 );

%channels_skip = ();
%channels_keep = ();
$url           = 'http://tvlistings2.zap2it.com/';

#$url      = 'http://tvlistings.zap2it.com/';

$ua = new RedirAgent();

